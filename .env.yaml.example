# ============================================================
# .env.yaml.example
#
# Cloud Run environment variables template for XPLAIN.
#
# SAFE TO COMMIT:
# - No credentials
# - No private bucket names
#
# Everyone should:
#   cp .env.yaml.example .env.yaml
# then edit ONLY what they need.
#
# üö® IMPORTANT:
# This project must NEVER load models from the internet.
# Models must be local or downloaded from GCS.
# ============================================================

# -----------------------------
# Model selection / loading
# -----------------------------

# Which model family to use in xplain_package.models.registry
MODEL_FAMILY: "blip"

# Optional finetuned model in GCS (entrypoint downloads it)
# Example:
# GCS_MODEL_URI: "gs://YOUR_BUCKET/models/cxiu_blip_baseline"
GCS_MODEL_URI: ""

# Where the model lives INSIDE the container after download
LOCAL_MODEL_DIR: "models/cxiu_blip_baseline"

# üö´ Deprecated / NOT USED.
HF_MODEL_NAME: ""

# Explicit rule flag. Always false.
ALLOW_HF_FALLBACK: "false"

# -----------------------------
# Inference parameters
# -----------------------------
BEAM_SIZE: "3"
MAX_NEW_TOKENS: "128"

# -----------------------------
# (Optional) GCP metadata
# Helpful for Makefile deploy commands
# -----------------------------
GOOGLE_CLOUD_PROJECT: "your-gcp-project-id"
GCP_PROJECT: "your-gcp-project-id"
GCP_REGION: "europe-west1"
DOCKER_REPO_NAME: "docker"
DOCKER_IMAGE_NAME: "api"
GAR_MEMORY: "2Gi"

# ‚ö†Ô∏è DO NOT set PORT in Cloud Run env files.
# Cloud Run injects PORT automatically.

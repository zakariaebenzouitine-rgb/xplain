# ============================================================
# .env.yaml.sample
#
# Cloud Run environment variables template for XPLAIN.
#
# SAFE TO COMMIT:
# - No credentials
# - No private bucket names
#
# Deployer will copy -> .env.yaml
# then fill in THEIR bucket/model path.
#
# ðŸš¨ IMPORTANT (NO INTERNET):
# - Model loading is LOCAL or GCS only.
# - Hugging Face / online fallback is disabled in code.
# ============================================================

# -----------------------------
# Model selection / loading
# -----------------------------

# Which model family to use in xplain_package.models.registry
# Future-proof: if we switch family later, change only this.
MODEL_FAMILY: "blip"

# Optional finetuned model in GCS (entrypoint downloads it)
# Example:
# GCS_MODEL_URI: "gs://my-bucket/models/cxiu_blip_baseline"
GCS_MODEL_URI: ""

# Where the model lives INSIDE the container after download
# Entry point verifies config.json exists here before starting API.
LOCAL_MODEL_DIR: "models/cxiu_blip_baseline"

# ðŸš« Deprecated / NOT USED (kept for backward compatibility only)
# Leave empty.
HF_MODEL_NAME: ""

# Explicit rule flag. Always false.
ALLOW_HF_FALLBACK: "false"


# -----------------------------
# Inference parameters
# -----------------------------
BEAM_SIZE: "3"
MAX_NEW_TOKENS: "128"


# -----------------------------
# (Optional) GCP metadata
# Not required by the code, but useful for Makefile/scripts
# -----------------------------
GCP_PROJECT: "project-id-123456"
GCP_REGION: "europe-west1"
DOCKER_REPO_NAME: "docker"
DOCKER_IMAGE_NAME: "api"
GAR_MEMORY: "2Gi"
